<%include ../partials/header%>

<div class="container">
    <div class="row">
<h1 style="text-align: center">Edit <%=campground2.name%></h1>

<div style="width: 30%; margin: 25px auto;">
<form action="/campgrounds/<%=campground2._id%>/?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control " type="text" name="camp1[name]" value="<%=campground2.name%>">
    </div>
    <!--Camp1 is coming from here-->
    <div class="form-group">
    <input class="form-control" type="text" name="camp1[image]" value="<%=campground2.image%>" >
    </div>
    
    <div class="form-group">
    <input class="form-control" type="text" name="camp1[description]" value="<%=campground2.description%>">
    </div>
    
    <div class="form-group">
    <input class="form-control" type="number" name="camp1[price]" value="<%=campground2.price %>" min ="0.01" step="0.01">
    <!--the min means min price, step will give the user a way with arrows to inc or decrease price-->
    </div>
    
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
    
</form>
<a href="/campgrounds">Go back</a>

</div>

    </div>
</div>
<%include ../partials/footer%>

